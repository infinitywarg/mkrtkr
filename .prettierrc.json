{
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 120,
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false,
                "explicitTypes": "always"
            }
        },
        {
            "files": [
                "*.ts"
            ],
            "options": {
                "trailingComma": "none",
                "printWidth": 120,
                "tabWidth": 2,
                "useTabs": true,
                "singleQuote": false,
                "semi": true,
                "bracketSpacing": true,
                "arrowParens": "always"
            }
        }
    ]
}